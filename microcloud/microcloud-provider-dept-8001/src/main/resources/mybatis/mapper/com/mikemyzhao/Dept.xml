<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mikemyzhao.microcloud.dao.IDeptDAO">
    <select id="findById" resultType="com.mikemyzhao.vo.Dept" parameterType="long">
		SELECT deptno,dname,loc FROM dept WHERE deptno=#{deptno} ;
	</select>
    <select id="findAll" resultType="com.mikemyzhao.vo.Dept">
		SELECT deptno,dname,loc FROM dept ;
	</select>
    <insert id="doCreate" parameterType="com.mikemyzhao.vo.Dept">
		INSERT INTO dept(dname,loc) VALUES (#{dname},database()) ;
	</insert>
</mapper>